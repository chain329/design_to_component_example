<mic-check
  class="inline-flex flex-col gap-y-4 border border-[#DDDDDD] rounded px-3 pt-4 pb-6 bg-white"
  data-controller="blocks--mic-check"
>
  <h3 class="flex justify-between items-center font-extrabold">
    <span>Mic Check</span>
    <%= inline_svg_tag 'icons/mic.svg', class: 'shrink-0 w-4.5 h-4.5 object-contain' %>
  </h3>
  <div class="flex flex-col">
    <p class="font-medium">Say something</p>
    <div class="flex justify-center items-center">
      <div
        class="inline-flex gap-x-0.5 mt-4"
        data-blocks--mic-check-target="bars"
      >
        <% @width.times.each do %>
          <div class="inline-flex flex-col gap-y-0.5">
            <% @height.times.each do %>
              <div class="w-1 h-1 bg-[#F3F8FF]"></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</mic-check>
